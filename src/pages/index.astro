---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import LinkCard from "@/components/mdx/LinkCard.astro";
---

<BaseLayout title="主页">
  <MainCard
    title="Hi there! 👋"
    description="欢迎来到 FeltSquirrel727 的个人网站"
    textOverlay="HOME"
    infoIcon="lucide:info"
  >
    <div class="space-y-12">
      <!-- Hero Section -->
      <section class="py-6">
        <div class="flex flex-col items-center text-center">
          <h1
            class="text-4xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent leading-loose"
          >
            我是 FeltSquirrel727
          </h1>
          <p class="text-xl text-base-content/80 max-w-3xl mb-6">
            欢迎来到我的小天地。我是一名热爱生活、热爱编程的高中学生
          </p>
          <p class="text-xl text-base-content/80 max-w-3xl mb-8">
            生活不只有代码，还有诗和远方。<br/>
            让我们一起享受这段旅程吧！
          </p>
          <blockquote class="italic border-l-4 border-primary pl-4 py-2 text-base-content/80 max-w-2xl mb-8">
            你的存在，则是我胸前心跳里五色的绚彩<br/>
            Your presence is in the heartbeat of my chest. The colorful splendor of five colors.
          </blockquote>
        </div>
      </section>

      <!-- Navigation Section -->
      <section class="py-6">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:compass" class="w-6 h-6 text-primary" />
          <span>导航</span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <LinkCard
            title="博客"
            desc="想到的与看到的"
            url="/blog"
            icon="lucide:book"
          />

          <LinkCard
            title="项目"
            desc="想法的实现"
            url="/project"
            icon="lucide:code"
          />

          <LinkCard
            title="关于"
            desc="'我'与博客"
            url="/about"
            icon="lucide:user"
          />

          <LinkCard
            title="友链"
            desc="有趣的灵魂"
            url="/friend"
            icon="lucide:link"
          />
        </div>
      </section>

      <!-- Let's Play Section -->
      <section class="py-6">
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:gamepad" class="w-6 h-6 text-primary" />
          <span>和我玩？</span>
        </h2>

        <div class="card bg-base-200 p-6">
          <div class="flex flex-col gap-4">
            <p class="text-lg mb-4">Hey，朋友，来看看我开设的MC服务器吗？</p>
            <a 
              href="https://play.mcmod.cn/sv20188110.html" 
              target="_blank" 
              rel="noopener noreferrer"
              class="btn btn-primary gap-2 self-start"
            >
              <Icon name="lucide:server" class="w-5 h-5" />
              <span>访问网站</span>
            </a>
            <div class="divider"></div>
            <div class="flex items-center gap-2 mt-4">
              <Icon name="lucide:gamepad-2" class="w-5 h-5 text-primary" />
              <span class="text-lg">我的Steam好友代码：<code>1263204075</code></span>
            </div>
          </div>
        </div>
      </section>
    </div>
  </MainCard>
</BaseLayout>
